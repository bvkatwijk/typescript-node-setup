{
  "name": "typescript-node-setup",
  "version": "1.0.0",
  "description": "Example setup using TypeScript and Node",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/bvkatwijk/typescript-node-setup.git"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lint": "tslint --project '.'",
    "compile": "tsc",
    "test": "jest --detectOpenHandles",
    "run": "node dist/app.js",
    "watch": "concurrently \"npm run watch-compile\" \"npm run watch-run\" \"npm run watch-test\" --kill-others",
    "watch-lint": "tsc --watch --skipLibCheck --preserveWatchOutput",
    "watch-compile": "tsc --watch --skipLibCheck --preserveWatchOutput",
    "watch-test": "CI=true npm run test -- --watchAll",
    "watch-run": "supervisor dist/app.js",
    "deploy": "rsync -avz ./dist root@elpaso.servers.pushcall.com:/var/www/bvkatwijk/dist"
  },
  "author": "bvkatwijk",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jasmine": "^2.8.8",
    "@types/jest": "^23.1.4",
    "concurrently": "^3.6.0",
    "jest": "^23.3.0",
    "live-server": "^1.2.0",
    "shipit-cli": "^4.1.1",
    "shipit-local": "^0.5.5",
    "supervisor": "^0.12.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "npm": "^6.1.0",
    "winston": "^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
